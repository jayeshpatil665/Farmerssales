<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateUserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                app:navigationIcon="@drawable/ic_baseline_close_white_24"
                app:titleTextColor="#ffffff"
                android:layout_height="?attr/actionBarSize"
                android:background="#253746"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:id="@+id/myProfile_action_bar"
                android:onClick="cancleOperation"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:layout_marginLeft="100dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:textSize="18dp"/>

            </androidx.appcompat.widget.Toolbar>
            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="My Account"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="35dp"
                android:gravity="center_vertical"
                android:background="#253746"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/border1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="FIRST NAME"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/ed1"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_below="@id/txt2"
                    android:textSize="16dp"
                    android:textColor="#374e63"
                    android:backgroundTint="#ccc"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="LAST NAME"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/ed1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/ed2"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textSize="16dp"
                    android:textColor="#374e63"
                    android:backgroundTint="#ccc"
                    android:layout_below="@id/txt3"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/border1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="PHONE NUMBER"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/ed3"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_below="@id/txt4"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="#374e63"
                    android:textSize="16dp"
                    android:backgroundTint="#ccc"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="EMAIL ADDRESS"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/ed3"
                    />
                <EditText
                    android:id="@+id/ed4"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_below="@id/txt5"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="#374e63"
                    android:backgroundTint="#ccc"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="327dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/border1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="ADDRESS"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/ed5"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_below="@id/txt6"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="16dp"
                    android:textColor="#374e63"
                    android:backgroundTint="#ccc"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="STATE"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/ed5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/ed6"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_below="@id/txt7"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="16dp"
                    android:textColor="#374e63"
                    android:backgroundTint="#ccc"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="DISTRICT"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/ed6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/ed7"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:textSize="16dp"
                    android:backgroundTint="#ccc"
                    android:layout_below="@id/txt8"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="#374e63"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt9"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="PINCODE"
                    android:textColor="#374e63"
                    android:textSize="12dp"
                    android:paddingTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/ed7"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:id="@+id/ed8"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:textSize="16dp"
                    android:backgroundTint="#ccc"
                    android:textColor="#374e63"
                    android:layout_below="@id/txt9"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/border1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/txt10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:text="UPDATE PASSWORD"
                    android:textColor="#374e63"
                    android:textSize="12dp"/>
                <EditText
                    android:id="@+id/ed9"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textSize="16dp"
                    android:backgroundTint="#ccc"
                    android:layout_below="@id/txt10"
                    android:layout_marginTop="5dp"
                    android:textColor="#374e63"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <Button
                    android:id="@+id/save"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textAllCaps="false"
                    style="?android:borderlessButtonStyle"
                    android:textSize="16dp"
                    android:background="#253746"
                    android:textColor="#ffffff"
                    android:onClick="toDatabase"/>
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    style="?android:borderlessButtonStyle"
                    android:background="#253746"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/save"
                    android:layout_marginLeft="25dp"

                    android:onClick="cancleOperation"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>