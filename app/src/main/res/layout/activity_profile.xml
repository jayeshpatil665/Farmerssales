<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/profile_bottom"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_account"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="fitXY"
                android:src="@drawable/splash_back">

            </ImageView>

            <Button
                android:id="@+id/acc_signin"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="20dp"
                android:text="Sign In"
                android:onClick="logInPage"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:background="#253746"/>
            <Button
                android:id="@+id/acc_create_acc"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/acc_signin"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Create Account"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:onClick="toCreateAcount"
                android:textAllCaps="false"
                android:background="#253746"/>

            <Button
                android:id="@+id/acc_app_setting"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="left"
                android:layout_below="@id/im_account"
                android:textAllCaps="false"
                android:paddingTop="15dp"
                style="?android:borderlessButtonStyle"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:textColor="#374e63"
                android:drawableRight="@drawable/ic_baseline_chevron_253746_right_24"
                android:text="\t\tApp Setting\n\n\t\tUpdate notification and location services so\n\t\t you never miss out.">
            </Button>
            <Button
                android:id="@+id/acc_help"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/acc_app_setting"
                android:layout_marginTop="10dp"
                android:gravity="left"
                style="?android:borderlessButtonStyle"
                android:textSize="12dp"
                android:textColor="#374e63"
                android:textAllCaps="false"
                android:paddingTop="15dp"
                android:background="#ffffff"
                android:text="\t\tHelp\n\n\t\tNeed answers? we're here for you."
                android:drawableRight="@drawable/ic_baseline_chevron_253746_right_24"/>
        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/profile_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <include layout="@layout/my_navigation"/>

    </RelativeLayout>

</RelativeLayout>