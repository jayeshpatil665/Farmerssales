<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/profile_bottom"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8ff"
            tools:context=".account">

            <ImageView
                android:id="@+id/im_account"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/splash_back">
            </ImageView>

            <TextView
                android:id="@+id/acc_txtname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="FarmersSales"
                android:textSize="38sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="130dp"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:padding="2dp"
                android:id="@+id/acc_signin"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="20dp"
                android:text="Sign In"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="#000000"
                />
            <Button
                android:padding="2dp"
                android:id="@+id/acc_create_acc"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/acc_signin"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Create Account"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:onClick="toCreateAcount"
                android:background="#000000"/>
            <Button
                android:id="@+id/acc_btn1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/im_account"
                android:background="#ffffff"
                android:text="Inbox"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:id="@+id/acc_btn2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/acc_btn1"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:text="Order History"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:id="@+id/acc_btn3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/acc_btn2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"
                android:text="Help"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/profile_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <include layout="@layout/my_navigation"/>

    </RelativeLayout>

</RelativeLayout>