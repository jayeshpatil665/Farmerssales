<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostAddActivity">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:title="Post Ad"
        app:titleTextColor="#000000"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"
        android:layout_above="@+id/layout_down"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:id="@+id/reg1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Title :"
                android:gravity="center_vertical"

                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/reg1_ed_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@+id/reg1_title"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/reg1_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/reg1_title"
                android:layout_marginTop="35dp"
                android:text="Category :"
                android:textSize="18sp"
                android:textColor="#000000"/>
            <Spinner
                android:id="@+id/reg1_spin_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/reg1_ed_title"
                android:layout_toRightOf="@+id/reg1_cat"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="25dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/reg1_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity :"
                android:gravity="center_vertical"
                android:layout_below="@+id/reg1_cat"
                android:layout_marginTop="34dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/reg1_ed_quantity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/reg1_spin_add"
                android:layout_toRightOf="@id/reg1_quantity"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/reg1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize :"
                android:gravity="center_vertical"
                android:layout_below="@+id/reg1_quantity"
                android:layout_marginTop="34dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/reg1_ed_price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/reg1_ed_quantity"
                android:layout_toRightOf="@id/reg1_price"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/reg1_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:gravity="center_vertical"
                android:layout_below="@+id/reg1_price"
                android:layout_marginTop="34dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/reg1_ed_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/reg1_ed_price"
                android:layout_toRightOf="@id/reg1_address"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/reg1_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State :"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_below="@id/reg1_address"
                android:layout_marginTop="35dp"/>
            <Spinner
                android:id="@+id/reg1_spin_state"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/reg1_ed_address"
                android:layout_toRightOf="@+id/reg1_state"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="21dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/reg1_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District :"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_below="@id/reg1_state"
                android:layout_marginTop="33dp"/>
            <Spinner
                android:id="@+id/reg1_spin_district"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/reg1_spin_state"
                android:layout_toRightOf="@+id/reg1_district"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="22dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/reg1_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pincode :"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/reg1_district"
                android:layout_marginTop="32dp"/>
            <EditText
                android:id="@+id/reg1_ed_pincode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/reg1_spin_district"
                android:layout_toRightOf="@id/reg1_pincode"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/reg1_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact :"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/reg1_pincode"
                android:layout_marginTop="35dp"/>
            <EditText
                android:id="@+id/reg1_ed_contact"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/reg1_ed_pincode"
                android:layout_toRightOf="@id/reg1_contact"
                android:textSize="18sp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/reg1_discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_below="@id/reg1_contact"
                android:layout_marginTop="34dp"/>
            <EditText
                android:id="@+id/reg1_ed_description"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/reg1_ed_contact"
                android:textSize="18sp"
                android:layout_toRightOf="@id/reg1_discription"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/reg1_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg1_ed_description"
                android:text="Note : Maximum 5 photos allowed"
                android:textColor="#000000"
                android:textSize="17dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/reg_btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Photos"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_below="@id/reg1_hint"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/reg_btn1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Post an Ad"
                android:background="#000000"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_below="@id/reg_btn_upload"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/reg_btn2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="#000000"
                android:textColor="#ffffff"
                android:layout_below="@id/reg_btn_upload"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_toRightOf="@id/reg_btn1"/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_down"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <include layout="@layout/my_navigation"/>

    </RelativeLayout>

</RelativeLayout>